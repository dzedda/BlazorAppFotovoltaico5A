@page "/addmarca"
@inject NavigationManager Navigation
<h3>AddMarca</h3>
<EditForm Model="@MyMarca" OnValidSubmit="ActionSave">

<div class="form-group">
    <label>Nome</label>
    <InputText id="nome" @bind-Value="MyMarca.NomeMarca" class="form-control" />
</div>

    <div class="form-group">
        <label>Sede</label>
        <InputText id="nazione" @bind-Value="MyMarca.NazioneSede" class="form-control"  />
</div>
    <div class="form-group">
        <label>Abituale?</label> 
        <InputCheckbox id="abituale" @bind-Value="MyMarca.Abituale" />
</div>
   
   
    <button type="submit" class="btn btn-primary">Salva</button>

</EditForm>

@code {
    [Parameter]
    public Marca MyMarca { get; set; } = new Marca();

    void ActionSave(){
        Marca x = new Marca(MyMarca.NomeMarca, MyMarca.NazioneSede, MyMarca.Abituale);
        Navigation.NavigateTo("marche");

    }

}
